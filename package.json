{
  "name": "dictionary-web-app",
  "version": "0.1.0",
  "homepage": "https://kwln.github.io/frontend-mentor-dictionary-web-app",
  "private": true,
  "dependencies": {
    "@types/node": "^16.18.50",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "npm run precommit"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.html,.md,.json src",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx,.html,.md,.json --fix src",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,html,md,json}' --config .prettierrc",
    "precommit": "npm run lint:fix && npm run format",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "gh-pages": "^6.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3"
  }
}
